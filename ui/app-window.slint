    in-out property <string> tanggal_hari_ini;
    in-out property <string> jam_saat_ini;
    in-out property <string> adzan_shubuh;
    in-out property <string> adzan_dzuhur;
    in-out property <string> adzan_ashar;
    in-out property <string> adzan_maghrib;
