    callback request-increase-value();
    callback show-about();
    callback show-credit();
    callback show-select-location();

    // main layout of the application
    VerticalLayout {
        
        spacing: 0px;

        // header section
        Rectangle {
            width: 100%;
            height: 280px;
            background: @linear-gradient(180deg, #000033 0%, transparent 80%);

            // background image with overlay
            // using a mosque image with a dark overlay for better readability
            // Adjusted opacity for a more subtle effect
            // and a more balanced text layout
            // The image is set to cover the entire header area
            // with a dark overlay for better readability
            // The text is centered and spaced for better visibility
            // The text colors are chosen for contrast against the background
            // The date and time are displayed in a clear, readable format   

            // komentar di atas gua generate pake AI bingung abisnya   
            Image {
                source: @image-url("../images/mosque.jpg");
                width: parent.width;
                height: parent.height;
                image-fit: cover;
                opacity: 0.85;

                Rectangle {
                    width: parent.width;
                    height: parent.height;
                    background: @linear-gradient(180deg, rgba(0, 0, 51, 0.5) 0%, rgba(0, 0, 51, 0.2) 100%);
                }

                Text {
                    text: "Waktu Shalat";
                    color: #F5F6F5;
                    font-size: 28px;
                    font-family: "Poppins";
                    font-weight: 700;
                    horizontal-alignment: center;
                    y: 20px;
                }

                Text {
                    text: root.location;
                    color: #E0E0E0;
                    font-size: 16px;
                    font-family: "Poppins";
                    font-weight: 500;
                    horizontal-alignment: center;
                    y: 60px;
                }

                Text {
                    color: #ffffff;
                    font-size: 48px;
                    font-family: "Arial";
                    font-weight: 800;
                    letter-spacing: 1.5px;
                    horizontal-alignment: center;
                    opacity: root.blink-active ? 0.5 + 0.5 * (1.0 + sin(animation-tick() / 1000ms * 360deg)) : 1.0;
                    
                    text: root.jam_saat_ini;
                }

                Text {
                    text: "Hari ini";
                    font-size: 13px;
                    color: white;
                    font-weight: 700;
                    x: 12px;
                    y: parent.height - 60px;
                }

                Text {
                    text: root.tanggal_hari_ini;
                    font-size: 13px;
                    color: white;
                    font-weight: 700;
                    font-italic: true;
                    x: 12px;
                    y: parent.height - 44px;
                }

                Rectangle {
                    x: parent.width - 60px;
                    y: 20px;
                    width: 40px;
                    height: 40px;
                    background: rgba(255, 255, 255, 0.2);
                    border-radius: 20px;
                    border-width: 1px;
                    border-color: #4FC3F7;

                    Text {
                        text: "🌍"; 
                        color: #4FC3F7;
                        width: parent.width;
                        height: parent.height;
                        y: 3.5px;
                        font-size: 24px;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }

                    TouchArea {
                        clicked => {
                             root.show-select-location();
                        }
                    }
                }
            }
        }

        // SECTION: Main Content
        Rectangle {
            background: #0A0A23;
            width: 100%;
            height: 100%;
            VerticalLayout {
                padding: 16px;
                spacing: 8px;
                ListJadwalShalat {
                    nama_shalat: "Shubuh";
                    waktu_shalat: root.adzan_shubuh;
                    is_silent: false;
                }

                ListJadwalShalat {
                    nama_shalat: "Dzuhur";
                    waktu_shalat: root.adzan_dzuhur;
                    is_silent: true;
                }

                ListJadwalShalat {
                    nama_shalat: "Ashar";
                    waktu_shalat: root.adzan_ashar;
                    is_silent: false;
                }

                ListJadwalShalat {
                    nama_shalat: "Maghrib";
                    waktu_shalat: root.adzan_maghrib;
                }

                ListJadwalShalat {
                    nama_shalat: "Isya";
                    waktu_shalat: root.adzan_isya;
                    is_active: true;
                }

                Footer { 
                    show-about => {
                        root.show-about();
                    }
                    show-credit => {
                        root.show-credit();
                    }
                }
            }
        }
    }
